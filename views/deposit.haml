%article.deposit
  %section.description
    = deposit["value"]["description"]
    &mdash;
    %span.date= deposit["value"]["deposited_date"]
  %ul.departments
    - deposit["value"]["department"].each do |dept|
      %li.department 
        %a{:href=>"/department/" + dept}= dept
  - if deposit["value"]["link_to_paper"]
    %p.link
      - filename = deposit["value"]["link_to_paper"]
      %a{:href => "#{filename}"}
        Download
        = filename[filename.rindex(".")+1..filename.length].upcase
  - if deposit["value"]["legislature"]
    %ul.legislature
      - deposit["value"]["legislature"].each do |legislature|
        %li{:class=>legislature}= legislature
